{
  "info": {
    "name": "Blood Sea API",
    "description": "Complete API collection for testing the Blood Sea NextJS API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "YOUR_FIREBASE_ID_TOKEN_HERE",
      "type": "string"
    }
