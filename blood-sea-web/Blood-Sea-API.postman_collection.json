  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Get Health Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/health/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "health", ""]
            }
          },
          "response": []
        }
      ]
    },
    {
